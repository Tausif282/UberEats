<section class="container">
    <article>
        <div class="col-md-5 mx-auto card" style="margin-top: 15%; border: none;">
            <a><img style="margin: 0% 14%; height: 50px; margin-bottom: 7%;" src="../../images/logo.svg" alt="logo"></a>
            <form action="/auth/login" method="POST">
                <h3>Welcome back</h3>
                <div class="form-group" style="margin-top: 4%;">
                    <label for="email">Sign in with your email address.</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="enter email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Login</button>
                </div>
            </form>
            <div style="text-align: center;">
                <p style="font-weight: 200;">New to Uber?
                    <a style="color: rgb(6,193,103);" href="/auth/register"> Create an account</a>
                </p>
            </div>
        </div>
    </article>
</section>